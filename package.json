{
	"name": "echomods",
	"private": true,
	"version": "0.2.3",
	"main": "main.mjs",
	"type": "module",
	"author": {
		"name": "Andrei Hudalla"
	},
	"repository": "https://github.com/echo-mods/core",
	"description": "A mod manager made FOR the community!",
	"build": {
		"productName": "EchoMods",
		"appId": "com.github.echo-mods.core",
		"directories": {
			"output": "out",
			"buildResources": "resources"
		},
		"protocols": {
			"name": "EchoMods",
			"schemes": [
				"echomods"
			]
		},
		"nsis": {
			"oneClick": false,
			"artifactName": "${productName} ${version} Setup.${ext}",
			"language": "1049",
			"displayLanguageSelector": true,
			"createDesktopShortcut": false,
			"allowToChangeInstallationDirectory": true,
			"installerSidebar": "installerSidebar.bmp"
		},
		"win": {
			"publish": [
				{
					"provider": "github",
					"owner": "echo-mods",
					"repo": "core"
				}
			],
			"target": [
				{
					"target": "nsis",
					"arch": [
						"x64",
						"ia32"
					]
				}
			]
		}
	},
	"scripts": {
		"dev:build": "vite build --watch",
		"dev:process": "electron .",
		"make": "vite build && electron-builder --win --publish onTagOrDraft"
	},
	"dependencies": {
		"@supabase/supabase-js": "^2.39.0",
		"@vueuse/core": "^10.6.1",
		"@vueuse/electron": "^10.0.2",
		"adm-zip": "^0.5.10",
		"dotenv": "^16.0.3",
		"electron-store": "^8.1.0",
		"electron-updater": "^6.1.7",
		"magnet-uri": "^7.0.5",
		"pinia": "^2.0.35",
		"sass": "^1.63.5",
		"showdown": "^2.1.0",
		"universal-cookie": "^6.1.1",
		"update-electron-app": "^3.0.0",
		"vue": "^3.2.47",
		"webtorrent": "^2.1.30",
		"ws": "^8.13.0"
	},
	"devDependencies": {
		"@electron-forge/cli": "^6.4.2",
		"@electron-forge/maker-deb": "^6.4.2",
		"@electron-forge/maker-rpm": "^6.4.2",
		"@electron-forge/maker-squirrel": "^6.4.2",
		"@electron-forge/maker-wix": "^6.1.0",
		"@electron-forge/maker-zip": "^6.4.2",
		"@electron-forge/plugin-auto-unpack-natives": "^6.4.2",
		"@iconify/vue": "^4.1.1",
		"@vitejs/plugin-vue": "^4.1.0",
		"electron": "^28.0.0",
		"electron-builder": "^24.9.1",
		"electron-wix-msi": "^5.0.0",
		"esm": "^3.2.25",
		"nodemon": "^3.0.1",
		"vite": "^4.2.0"
	}
}
